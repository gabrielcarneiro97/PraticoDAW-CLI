<div class="parallax-container">
  <div class="section" id="index-banner">
    <div class="container">
      <div class="row center">
        <h4 class="header col s12 black-shadow" style="margin-top:15%; color: white">Procurando por uma oportunidade?</h4>
      </div>
      <div class="row center white z-depth-2">
        <div class="input-field col s12">
          {{input placeholder="Busque aqui" value=search type="text"}}
        </div>
      </div>
      <div class="row center" style=" margin-top: -1%;">
        <button {{action "buscar"}} class="btn-large blue lighten-2 col s2 offset-s5">
          Buscar
        </button>
      </div>
    </div>
    <img src="assets/images/drawing.svg" alt="" class="buildings"/>
    <div class="parallax"><img src="assets/images/cityNoLights.jpg" alt=""/></div>
